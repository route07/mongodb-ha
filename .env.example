# Mongo DB
MONGO_INITDB_ROOT_USERNAME=
MONGO_INITDB_ROOT_PASSWORD=
MONGO_PORT=27017

# Secondary Node Ports (for HA failover - allows clients to connect if secondary becomes primary)
MONGO_SECONDARY1_PORT=27018
MONGO_SECONDARY2_PORT=27019

# High Availability (Replica Set) Configuration
# Set REPLICA_SET_NAME to enable HA mode (use docker-compose.ha.yaml)
REPLICA_SET_NAME=rs0
# Optional: Override secondary hostnames (defaults: mongodb-secondary-1, mongodb-secondary-2)
# MONGO_SECONDARY1_HOST=mongodb-secondary-1
# MONGO_SECONDARY2_HOST=mongodb-secondary-2

# MongoDB Connection String Components (for applications connecting to MongoDB)
# Use these to build MONGODB_URI dynamically in your application
# MONGODB_HOST=localhost                    # Use 'localhost' for same server, IP/hostname for remote
# MONGODB_PORT=27017                        # MongoDB port (default: 27017)
# MONGODB_USERNAME=rbdbuser                 # MongoDB username
# MONGODB_PASSWORD=adsijeoirFgfsd092rvcsxvsdewRS  # MongoDB password
# MONGODB_DATABASE=w3kyc                    # Database name
# MONGODB_REPLICA_SET=rs0                   # Replica set name (if using HA)
# MONGODB_TLS_CA_FILE=./tls-certs/ca.crt    # Path to CA certificate file
# MONGODB_TLS_ALLOW_INVALID=true            # Allow self-signed certificates (true/false)

# Custom MongoDB Admin UI (exposed via docker)
ADMIN_UI_PORT=3000

# Web3 Authentication. Add one or more admin wallets
WEB3_AUTH_ENABLED=false
ADMIN_WALLETS=0x9220160e87D7995bC551a109C61505d60C9eC33B,0x97a362bC0d128E008E2E2eD7Fc10CFDdDF54ed55
SESSION_SECRET=change-this-secret-in-production

# HA ReplicaSet 
REPLICA_SET_NAME=rs0

# IPFS Backup Configuration
# Generate encryption key: openssl rand -base64 32
BACKUP_ENCRYPTION_KEY=your-256-bit-base64-encoded-key-here
ENCRYPTION_KEY_DERIVATION_ITERATIONS=100000

# S3 Path                        
BACKUP_S3_PATH=/mnt/s3-hel
BACKUP_S3_HOST_PATH=/home/tschain/s3-hel

# IPFS Cluster Nodes (REQUIRED)
IPFS_NODE_1_URL=http://ipfs-node-1.internal:5001
IPFS_NODE_2_URL=http://ipfs-node-2.internal:5001
IPFS_REPLICATION_FACTOR=2

# Backup Schedule (cron format)
FULL_BACKUP_SCHEDULE=0 2 * * 0
INCREMENTAL_BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=90

# Local Storage Retention
BACKUP_LOCAL_RETENTION_DAYS=7

# S3 Storage (mounted S3 drive)
BACKUP_S3_HOST_PATH=/home/tschain/s3-hel  # Host path to S3 mount (absolute path on your server)
BACKUP_S3_PATH=/mnt/s3-hel  # Path inside container (don't change this)

# Webhook Notifications
WEBHOOK_URL=https://your-webhook-url.com/backup-notifications
WEBHOOK_ENABLED=true

# Logging
LOG_LEVEL=info
